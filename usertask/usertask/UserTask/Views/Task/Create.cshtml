@{
    @model UserTask.Models.TaskModel

}
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                dateFormat: "dd.mm.yy"
            });
        });
        // $(function () {
        //     $('#datepicker').datepicker({ dateFormat: 'dd-mm-yy' });
        // });
    </script>
}
<form id="submitOrderForm" asp-action="Create" asp-controller="Task" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Title" class="col-sm-2 control-label">Title</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" }})
            @Html.ValidationMessageFor(model => model.Title)
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-2 control-label">Description</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }})
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    <div class="form-group">
        <label for="DueDate" class="col-sm-2 control-label">DueDate</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.DueDate,  new { @class = "form-control datepicker"})
            @Html.ValidationMessageFor(model => model.DueDate)
        </div>
    </div>
    <div class="form-group">
        <label for="status" class="col-sm-2 control-label">Status</label>
        <div class="col-sm-10">
            <select name="status" class="form-control" asp-items="@Model.StatusesSelect"></select>
        </div>
    </div>
    <div class="form-group">
        <label for="PriorityLevel" class="col-sm-2 control-label">PriorityLevel</label>
        <div class="col-sm-10">
            <select name="PriorityLevel" class="form-control" asp-items="@Model.PriorityLevelsSelect"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>